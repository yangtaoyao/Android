<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:background="@color/colorholo_red_light"
    android:id="@+id/rl_titlebar"
    >

    <ImageView
        android:id="@+id/titlebar_iv_left"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/titlebar_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="左边"
        android:visibility="gone"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/titlebar_tv"
        android:maxWidth="224dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:maxLines="1"
        />
    <ImageView
        android:id="@+id/titlebar_iv_right02"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/titlebar_iv_right"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/titlebar_iv_right"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/titlebar_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="右边"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        android:visibility="gone"
        />
